<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Url</th>
    <th>Text</th>
    <th>User</th>
    <th>Upvote</th>
    <th>Downvote</th>
    <th>Id</th>
    <th>Comment count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.url %></td>
    <td><%= post.text %></td>
    <td><%= post.user %></td>
    <td><%= post.upvote %></td>
    <td><%= post.downvote %></td>
    <td><%= post.id %></td>
    <td><%= post.comment_count %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

