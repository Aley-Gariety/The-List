<ol>
  <% @posts.each do |post| %>
    <li>
<!--
      <div class="suffrage">
        <span class="up">&#9650;</span>
        <span class="down">&#9660;</span>
      </div>
-->
      <a href="<%= post.url %>" target="_blank" class="title"><%= post.title %></a><br>
      <span class="meta"><%= post.upvote %> points by <%= post.user %>&nbsp;&mdash;&nbsp;<%= time_ago_in_words(post.created_at) %> ago&nbsp;&mdash;&nbsp;<%= link_to "View #{post.comment_count} Comments", post %></span>
    </li>
  <% end %>
</ol>