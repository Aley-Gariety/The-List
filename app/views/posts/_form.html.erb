<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "problem") %> found:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul><br>
    </div>
  <% end %>

  <span>Will cost you <span class="red">10 karma</span>.</span><br><br>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div><br>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div><br>
  <div class="field">
    <%= check_box(:post, :agreement) %>
    <%= label(:post, :agreement, 'Yes, I have read the <a href="/guidelines">guidelines</a>.'.html_safe) %>
  </div><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
