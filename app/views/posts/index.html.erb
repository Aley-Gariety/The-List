<ol>
  <% @posts.each do |post| %>
    <li>
      <div class="order">
        <span><%= @posts.index(post) + 1 %>.</span>
      </div>
      <div class="suffrage">
        <span class="up">&#9650;</span><br>
        <span><%= post.upvote %></span><br>
        <span class="down">&#9660;</span><br>
      </div>
      <div class="submission">
        <div class="submission-inner">
          <a href="<%= post.url %>" target="_blank" class="title"><%= post.title %></a><br>
          <span class="meta">Submitted by <%= post.user %>&nbsp;&mdash;&nbsp;<%= time_ago_in_words(post.created_at) %> ago&nbsp;&mdash;&nbsp;<%= link_to "View #{post.comment_count} Comments", post %></span>
        </br>
      </div>
      <div class="clearfix"></div>
    </li>
  <% end %>
</ol>