<h2>Create Your Account</h2>

<p>You've been selected to contribute to The List.</p>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
  	<%= f.hidden_field :auth_token %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div><br>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div><br>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div><br>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <p class="button"><%= f.submit "Create Account" %></p>
<% end %>